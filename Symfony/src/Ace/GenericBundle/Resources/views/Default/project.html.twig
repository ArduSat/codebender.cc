{% extends '::container.html.twig' %}
{% block title "Project Info" %}
{% block stylesheets %}
<link href='http://twitter.github.com/bootstrap/assets/js/google-code-prettify/prettify.css' type="text/css" rel="stylesheet" />
<script src='http://cdnjs.cloudflare.com/ajax/libs/prettify/188.0.0/prettify.js' type='text/javascript'></script>
<style type="text/css" media="screen">
.page-header
{
	margin-top: 0;	
}
h1 small
{
	float:right;
}
#menu-getproject
{
	float:right;
}
.modal-footer button.btn {
    width: 20%;
}
</style>
{% endblock %}
{% block body_options %} onload="prettyPrint()"{% endblock %}
{% block mainspan %}
	<div class="page-header row-fluid" >
		<h1>{{ project_name }}<small>By <a href="{{path('AceGenericBundle_user',{'user':owner['username'] })}}">{{ owner['username'] }}</a> ({{owner['firstname']}} {{owner['lastname']}})</small></h1>
	</div>
	<div class="row-fluid">
		<h5>Description: </h5>
		{% render "AceUtilitiesBundle:Default:getDescription" with {'id': project_id} %}
		<hr>
{#		<div id="menu-getproject" class="btn-group">
			<a class="btn btn-primary" href="{{path('AceTempBundle_download',{'username':owner.getUsername(),'project_name': project})}}">Download</a>
			{% if is_granted('ROLE_USER') %}	
				<a class="btn btn-primary"  data-toggle="modal" href="#cloneModal">Clone</a>
			{% endif %}
		</div>#}
	</div>
	<div class="modal hide" id="cloneModal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">Ã—</button>
			<h3>Clone Project</h3>
		</div>
		<div class="modal-body">
{#			<p>Create new project from existing with name...</p>
			<form method='post' action='{{ path('AceFileBundle_clone',{'old_user':owner.getUsername(),'old_project_name': project}) }}'>
			<input type="text" name='name' class="input-medium search-query" placeholder="Type the name of your new project">	
#}
		</div>
		<div class="modal-footer">
			<input type="button" class="btn" data-dismiss="modal" value="Cancel"/>
			<input type="submit" class="btn btn-primary" value="Create"/>
			</form>
		</div>
    </div>
	{% for file in files %}
	<h2>{{file['filename']}}</h2>
	<div id="code-container" class="row-fluid">
		<pre id="editor" class="prettyprint linenums">{{file['code']}}</pre>
	</div>
	{% endfor %}
{% endblock %}