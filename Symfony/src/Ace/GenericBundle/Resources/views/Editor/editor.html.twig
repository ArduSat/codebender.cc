{% block javascripts %}
	<script src="{{asset("beautify.js")}}" type="text/javascript"></script>
	<script src="{{asset("lawnchair-0.6.1.min.js")}}" type="text/javascript"></script>
	<script src="http://d1n0x3qji82z53.cloudfront.net/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
	<script>
	var dirty = false;
	var editor;
	$(document).ready(function()
	{
		editor = ace.edit("editor");
	    editor.setTheme("ace/theme/textmate");
	    editor.getSession().setMode("ace/mode/c_cpp");

		editor.getSession().setUseSoftTabs(false);
		editor.getSession().on('change', function()
		{
			$("#line_count").html(editor.getSession().getValue().split("\n").length);
		});

		addCommands();

		window.files = {
		{% for file in files %}
		{#
			newfile = new Array();
			newfile["filename"] = "{{file['filename']}}"
			newfile["code"] = "{{file['code']}}";
			window.files[{{key}}] = newfile;
		#}
		    "{{file['filename']}}": "{{file['code'] | e('js')}}",
		{% endfor %}
		};
		{% if files[0] is defined %}
			window.selectedFile = "{{files[0]['filename']}}";
		{% endif %}

		window.boardz = {{boards|raw}};
		window.binary = null;
		mySelect = $("#boards");
		for (var i=0;i<window.boardz.length;i++)
			mySelect.append($('<option></option>').val(window.boardz[i]["name"]).html(window.boardz[i]["name"]));

		$("#progress").hide();
		if(window.usb_enabled == null);
			$("#scanning").hide();

		$("#line_count").html(editor.getSession().getValue().split("\n").length);
		disableLink($(".link_hex"));

		$("#connect").click(function()
		{
			connect();
		});

		$("#compile").click(function()
		{
			verify();
		});

		$("#uploadusb").click(function()
		{
			uploadusb();
		});

		$("#netload").click(function()
		{
			netload();
		});

		{% if user_enable_usb is defined %}
			enableUSB();
		{% endif %}
		{% if user_enable_net is defined %}
			enableNET();
		{% endif %}

		if (isMobile()){
			$("#desktop-tools-1").hide();
			$("#desktop-tools-2").hide();
		}

		loadSettings();
	});
	</script>
	{% include 'AceGenericBundle:Editor:editor_scripts.html.twig' %}
{% endblock %}

{% block content %}
<div class="modal hide fade" id="deletionModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">&#215;</button>
    <h3>Are you sure you want to delete your sketch?</h3>
  </div>
  <div class="modal-body">
    <p>Deleting your sketch is going to destroy all of its data. This action is irreversible. If you chose to delete your project, all the files associated with it are going to be destroyed and the data will be irrecoverable. You <strong>WILL BE UNABLE</strong> to back up your files.</p>
  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" class="btn">Cancel</a>
    <a href="{{ path('AceUtilitiesBundle_deleteproject', {'id':project_id}) }}" class="btn btn-danger"><i class="icon-trash icon-white"></i> Delete!</a>
  </div>
</div>

<object id="plugin0" type="application/x-codebendercc" width="0" height="0">
    <param name="onload" value="enableUSB" />
</object><br />

<div class="modal hide fade" id="warningModal">
		<div class="modal-header">
		<button class="close" data-dismiss="modal">&#215;</button>
		<h3>Are you sure you want to load an example?</h3>
		</div>
		<div class="modal-body">
			<p>Loading an example is going to <strong>OVERWRITE</strong> the data of your current project. If you wish to maintain your current project please create a new empty project and then load your preferred example. </p>
		</div>
		<div class="modal-footer">
		<a data-dismiss="modal" class="btn">Cancel</a>
		<a data-dismiss="modal" id="loadLink" onclick="" href="javascript:void(0)" class="btn btn-warning"><i class=" icon-chevron-right icon-white"></i> Load Example</a>
		</div>
</div>

<div class="modal hide fade" id="descriptionModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>Enter your new project description.</h3>
  </div>
  <div class="modal-body span5">
	<textarea id="newDescription" style="resize: none;" rows="4" class="span5">{% render "AceUtilitiesBundle:Default:getDescription" with {'id': project_id} %}</textarea>
  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" class="btn">Cancel</a>
    <a href="javascript:saveDescription()" class="btn btn-primary"><i class="icon-download icon-white"></i> Save Changes</a>
  </div>
</div>

<div class="modal hide fade" id="nameModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>Enter your new project name.</h3>
  </div>
  <div class="modal-body span5">
	<input type="text" id="newName" value="{{project_name}}" class="span5">
  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" class="btn">Cancel</a>
    <a href="javascript:saveName()" class="btn btn-primary"><i class="icon-download icon-white"></i> Save Changes</a>
  </div>
</div>

<div class="modal hide fade" id="creationModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>New File</h3>
  </div>
  <div class="modal-body span5">
	<p>Enter the name of the new file you'd like to create.</p>
	<input type="text" id="createfield" />
  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" class="btn">Cancel</a>
	<button id="createbutton" class="btn btn-primary" onclick="createFile();">Create File</button>
  </div>
</div>

<div class="modal hide fade" id="filenameModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>Enter the new filename.</h3>
  </div>
  <div class="modal-body span5">
	<input type="hidden" id="oldFilename">
	<input type="text" id="newFilename">
  </div>
  <div class="modal-footer">
    <a data-dismiss="modal" class="btn">Cancel</a>
    <a href="javascript:renameFilename()" class="btn btn-primary"><i class="icon-download icon-white"></i> Save Changes</a>
  </div>
</div>

<div class="container">
<div id="container" class="row-fluid">	
	<div class="row-fluid">
	<div id="container_left" class="span4">
			<h4>{{project_name}}{% if files|length > 1 %} : <span id="selectedFile" class="muted">{{project_name}}.ino</span>{% endif %}</h4>
		  <ul class="nav nav-tabs">
		    <li class="active"><a href="#tab1" data-toggle="tab">Operations</a></li>
		    <li><a href="#tab2" data-toggle="tab">Change Info</a></li>
		    <li><a href="#tab3" data-toggle="tab">Sidebar</a></li>
		  </ul>
		  <div class="tab-content" >
		    <div class="tab-pane active" id="tab1">
				<ul class="nav nav-pills">
					<!-- <li class="disabled"><a href="javascript:void()" style="color:#000;">Files:</a></li> -->
					{% if files|length > 1 %}
					<li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">Delete<b class="caret"></b></a>
					    <ul class="dropdown-menu">
						{% for file in files %}
							{% if file['filename'] != project_name ~ ".ino" %}
							<li>
								<a href="javascript:void(0)" onclick="deleteFile('{{file['filename']}}')">Delete {{file['filename']}}</a>
							</li>
							{% endif %}
						{% endfor %}
					      <!-- links -->
					    </ul>
					</li>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void()">Rename<b class="caret"></b></a>
					    <ul class="dropdown-menu">
							{% for file in files %}
								{% if file['filename'] != project_name ~ ".ino" %}
								<li>
									<a href="javascript:void(0)" onclick="renameFilenameModal('{{file['filename']}}')">Rename {{file['filename']}}</a>
								</li>
								{% endif %}
							{% endfor %}
					    </ul>
					</li>
					<li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">Load<b class="caret"></b></a>
					    <ul class="dropdown-menu">
							{% for file in files %}
								<li>
									<a href="javascript:void(0)" onclick="loadCode('{{file['filename']}}');">Load {{file['filename']}}</a>
								</li>
							{% endfor %}
					      <!-- links -->
					    </ul>
					</li>
					{% endif %}
					<li>
						<a data-toggle="modal" href="#creationModal"><i class="icon-plus-sign"></i> New</a>
					</li>
				</ul>
				<div class="btn-group span12" style="margin-bottom:10px; margin-left:0px;">
					<button id = "delete" class="btn btn-danger" data-toggle="modal" href="#deletionModal"><i id="delete_icon" class="icon-trash  icon-white"></i>{# Delete#}</button>
					<button class="btn btn-primary" href="{{ path('AceUtilitiesBundle_download', { 'id' : project_id }) }}"><i class="icon-download-alt icon-white"></i></button>					
					<button id = "revert" class="btn" onclick="revert();"><i id="revert_icon" class="icon-arrow-left"></i> Revert</span></button>
				    <button id = "save" class="btn" onclick="save();"><i id="save_icon" class="icon-download"></i> Save</button>
					<button id = "compile" class="btn"><i id="compile_icon" class="icon-check"></i><span id="compile_text"> Verify</span></button>
				</div>
				<select id="boards" style="width:100%;" onChange="saveBoard()">
				</select>
				<!-- <hr> -->
				<div id="desktop-tools-1" class="visible-desktop">
				<div id="usb-sidebar-div">
					<!-- <h4>Flashing</h4> -->
					<div id="prescanning">
						<div id="missingplugin">
							<p>It seems like you need to enable or install the Codebender.cc Browser Plugin. You can see more information about the plugins from the <a href="{{asset("static/plugin")}}" >plugins page</a>.</p>
						</div>
					</div>
				    <div id="scanning">
						<div class="input-append">
					        <select id="ports" onChange="savePort()"></select>
							<button id = "uploadusb" class="btn"><i id="upload_icon" class="icon-upload"></i><span id="upload_text"> USB Flash </span></button>
						</div>
						<!-- <div class="btn-group" style="margin-bottom:10px; margin-left:0px;"> -->
							<!-- <button id="connect" class="btn"><i id="connect_icon" class="icon-asterisk"></i> Serial Monitor</button> -->
						<!-- </div> -->
					</div>
				</div>
				</div>
				<div class="input-append">
					<input type="text" id='ip'>
					<button id="cloudload" onclick="cloudload()" class="btn">
						<i class="icon-globe"></i> Cloud Flash<span id="cloudload-ip"></span>
					</button>
				</div>
				Share on
				<a href="https://www.facebook.com/dialog/feed?
				  app_id=439261962789824&amp;
				  link={{ app.request.uri }}&amp;
				  name=codebender.cc%20-%20{{project_name}}&amp;
				  caption=Check%20out%20my%20latest%20Arduino%20project%20on%20codebender.&amp;
				  redirect_uri={{ app.request.uri }}">Facebook</a> or
				<a href="https://twitter.com/share" class="twitter-share-button" data-text="Check out my new Arduino project, {{project_name}} on @codebender_cc!" data-count="none">Tweet</a>
				<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
				<hr>
				<div><p>Total Number of lines: <span id="line_count">0</span></div>
				<div id="progress" class="progress progress-striped active">
				    <div id="progress_val" class="bar" style="width: 40%;"></div>
				    </div>
				<div id="operation_output">
				</div>
		    </div>
		    <div class="tab-pane" id="tab2">
				<h3>Name:</h3>
				<p id="oldName">{{project_name}}</p>
				<a data-toggle="modal" href="#nameModal" style="float:right;">edit</a>
				<br>
				<h3>Description:</h3>
				<p id="oldDescription">{% render "AceUtilitiesBundle:Default:getDescription" with {'id': project_id} %}</p>
				<a data-toggle="modal" href="#descriptionModal" style="float:right;">edit</a>
		    </div>
		    <div class="tab-pane" id="tab3">
		      {% render "AceUtilitiesBundle:Default:sidebar" %}
		    </div>
		  </div>
		
	</div>
	<div id="container_right" class="span8">
		<div class="row-fluid">
		<pre id="editor" class="span7">{% if files[0] is defined %}{{files[0]['code']|raw}}{% endif %}</pre>
		</div>
		<div class="row-fluid">
			<pre id="compile_output" class="span7"></pre>
		</div>
	</div>	
</div>
</div>
</div>

