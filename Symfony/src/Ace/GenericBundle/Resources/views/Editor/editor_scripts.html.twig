                    $(".ace_gutter-cell").css("text-decoration", "").css("color", "");
                    $("#editor").css("bottom", "");
                    $("#compile_output").css("bottom", "");
                    $("#compile_output").css("height", "");
                    $("#compile_output").css("padding-top", "");
                    $("#compile_output").removeClass("well");

