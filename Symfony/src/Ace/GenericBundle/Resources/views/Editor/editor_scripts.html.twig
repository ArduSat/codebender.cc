                    $("#compile_output").css("bottom", "0px");
                    $("#compile_output").css("padding-top", "10px");
                    $("#compile_output").css("height", "120px");
                    $("#compile_output").addClass("well");
                    $("#compile_output").html(obj.text);
                    clearProgress("Upload failed.")
                }
