function downHudAppend(line) {
    if (isNaN(line)) {
        downHudWrite($("#compile_output").html() + line + "<br>");
    } else {
        if (line == "13")    return;
        if (line == "10")    downHudWrite($("#compile_output").html() + "<br>");
        if (line != "10")    downHudWrite($("#compile_output").html() + String.fromCharCode(line));
    }
}

function serialHudAppend(line) {
    if (isNaN(line)) {
        serialHudWrite($("#serial_hud").html() + line + "<br>");
    } else {
        if (line == "13")    return;
        if (line == "10")    serialHudWrite($("#serial_hud").html() + "<br>");
        if (line != "10")    serialHudWrite($("#serial_hud").html() + String.fromCharCode(line));
    }
}
