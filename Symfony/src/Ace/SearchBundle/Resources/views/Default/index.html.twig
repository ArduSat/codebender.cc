{% extends '::container.html.twig' %}
{% block title "Search Results" %}
{% block mainspan %}
<h3>Search results for: {{ query }}</h3>
<br />
{% if files %}
	<h2>Projects</h2>
	<table class="table table-bordered table-striped">
	<thead>
	<tr>
	<th>Project Name</th>
	<th>User</th>
	</tr>
	</thead>
	<tbody>
	{% for file in files %}
		<tr>
		<td><a href="{{path('AceEditorBundle_project',{'project_name':file.name, 'username': owners[file.owner]})}}">{{file.name}}</a></td>
		<td><a href="{{path('AceEditorBundle_user',{'user':owners[file.owner]})}}">{{owners[file.owner]}}</a></td>
		</tr>
	{% endfor %}
	</tbody>
	</table>
{% endif %}
{% if users %}
	<h2>Users</h2>
	<table class="table table-bordered table-striped">
	<thead>
	<tr>
	<th>Username</th>
	<th>Full Name</th>
	</tr>
	</thead>
	<tbody>
	{% for user in users %}
		<tr>
		<td><a href="{{path('AceEditorBundle_user',{'user':user.username})}}">{{user.username}}</a></td>
		<td>{{user.firstname}} {{user.lastname}}</td>
		</tr>
	{% endfor %}
	</tbody>
	</table>
{% endif %}

{% if users == null and files == null %}
<h2>No results found :(</h2>
{% endif %}

{% endblock %}

